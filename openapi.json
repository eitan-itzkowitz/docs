{
  "openapi": "3.0.3",
  "info": {
    "title": "Puzzle API",
    "version": "1.0"
  },
  "paths": {
    "/bills": {
      "get": {
        "summary": "Retrieve Bills",
        "description": "Retrieve a list of bills recorded in the accounting system.",
        "tags": ["Expenses"],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Draft", "Posted", "Paid", "Voided"],
              "example": "Posted"
            },
            "description": "Filter bills by status."
          },
          {
            "name": "vendor",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "example": "vendor-orthosupplies-001"
            },
            "description": "Filter bills by vendor ID."
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "x-status": "live",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Bill" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bill": {
        "type": "object",
        "title": "Bill",
        "description": "Represents a company expense record, linked to a vendor and containing line items.",
        "properties": {
          "id": { "type": "string", "description": "Unique identifier for the bill." },
          "company": { "type": "string", "description": "References the company associated with the bill." },
          "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the bill was created." },
          "updatedAt": { "type": "string", "format": "date-time", "description": "Timestamp when the bill was last updated." },
          "vendor": { "type": "object", "description": "Vendor associated with the bill.", "properties": { "id": { "type": "string" }, "name": { "type": "string" } } },
          "issueDate": { "type": "string", "format": "date", "description": "Date the bill was issued." },
          "dueDate": { "type": "string", "format": "date", "description": "Date the bill is due." },
          "externalId": { "type": "string", "description": "External reference ID for integrations." },
          "description": { "type": "string", "description": "Brief description or memo about the bill." },
          "billLines": { "type": "array", "description": "Line items associated with the bill.", "items": { "type": "object", "properties": { "id": { "type": "string" }, "description": { "type": "string" } } } },
          "billLevelTaxes": { "type": "array", "description": "Taxes applied at the bill level.", "items": { "type": "object", "properties": { "id": { "type": "string" }, "taxedAmount": { "type": "object" } } } },
          "billLevelDiscounts": { "type": "array", "description": "Discounts applied at the bill level.", "items": { "type": "object", "properties": { "id": { "type": "string" }, "amount": { "type": "object" } } } },
          "shippingLines": { "type": "array", "description": "Shipping and handling charges associated with the bill.", "items": { "type": "object", "properties": { "id": { "type": "string" }, "total": { "type": "object" } } } },
          "payments": { "type": "array", "description": "A list of payments applied to the bill.", "items": { "type": "object", "properties": { "id": { "type": "string" }, "amount": { "type": "object" } } } },
          "status": { "type": "string", "enum": ["Deleted", "Draft", "Posted", "Voided", "Paid"], "description": "Current status of the bill." },
          "dueStatus": { "type": "string", "enum": ["Current", "Overdue"], "description": "Indicates if the bill is due or overdue." },
          "paidAt": { "type": "string", "format": "date-time", "description": "Timestamp when the bill was fully paid." },
          "files": { "type": "array", "description": "A list of attached files (e.g., receipts, invoices).", "items": { "type": "object", "properties": { "id": { "type": "string" }, "filename": { "type": "string" } } } }
        },
        "required": ["id", "company", "createdAt", "vendor", "issueDate", "dueDate", "billLines", "status", "dueStatus"]
      }
    }
  }
}
