openapi: 3.0.3
info:
  title: Puzzle API
  version: "1.0"

paths:
  /bills:
    get:
      summary: "Retrieve Bills"
      description: "Retrieve a list of bills recorded in the accounting system."
      tags: ["Expenses"]
      responses:
        "200":
          description: "Successful response"
          content:
            application/json:
              schema:
                type: object
                properties:
                  success: { type: boolean, example: true }
                  data:
                    type: array
                    items: { $ref: "#/components/schemas/Bill" }

components:
  schemas:
    Bill:
      $ref: "./api-reference/components.yaml#/components/schemas/Bill"
    MonetaryValue:
      $ref: "./api-reference/components.yaml#/components/schemas/MonetaryValue"
    TaxRate:
      $ref: "./api-reference/components.yaml#/components/schemas/TaxRate"
