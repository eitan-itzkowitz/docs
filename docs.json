          },
          {
            "group": "Endpoints",
            "groups": [
              {
                "group": "Accounting",
                "pages": [
                  "api-reference/endpoints/users",
                  "api-reference/endpoints/general-ledger",
                  "api-reference/endpoints/subledger"
                ]
              },
              {
                "group": "Revenue",
                "pages": [
                  "api-reference/endpoints/invoices",
